<!-- Booking Request Modal -->
<div
  class="modal__overlay modal__overlay--newsletter modal__overlay--item-request mobile-full-height"
  id="BookingModal"
  style="display: none;"
>
  <section class="modal__outer">
    <div class="modal__wrapper">
      <div class="modal--newsletter modal--item-request mobile-full-height">
        <div class="image-with-text-section">
          <div
            class="image-with-text-wrapper image-with-text-wrapper--reverse image-with-text-wrapper--no-image"
          >
            <div class="image-with-text__text">
              <div class="image-with-text__inner modal_content" id="ModalContent">
                <p class="modal__subtitle">Appointment Booking</p>
                <div class="modal__description rte">
                  <p>Please share your information to submit your request.</p>
                </div>
                <form
                  method="post"
                  id="contact_form"
                  accept-charset="UTF-8"
                  class="contact-form"
                >
				<!--  <input type="hidden" name="form_type" value="booking" /> -->

                  <div class="modal-input__container">
                    <input
                      type="text"
                      name="name"
                      placeholder="Full Name"
                      required
                    />

                    <input
                      type="email"
                      name="email"
                      placeholder="Email Address"
                      id="email"
                      required
                    />

                    <input
                      type="tel"
                      name="phone"
                      placeholder="Phone Number"
                      id="phone"
                      required
                    />
                    
                    <select name="salon" id="salon" required>
                      <option value="" default>Select a Salon</option>
                      <option value="Sydney">Sydney</option>
                      <option value="Melbourne">Melbourne</option>
                      <option value="Brisbane">Brisbane</option>
                    </select>
                    
					<div style="display: flex; justify-content: space-between;">
                      <input type="date" name="date" style="width: 48%;" id="date" placeholder="dd-mm-yyyy" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01])-(0[1-9]|1[012])-[0-9]{4}" required>
					  <select id="time" name="time" style="width: 48%;" placeholder="Select a time" required></select>
					<!--  <input type="datetime-local" id="datetimepicker" class="booking-input-date" placeholder="Select a date and time" required> -->
                    </div>
                    
                    <textarea
                      name="message"
                      id="message"
                      cols="30"
                      rows="4"
                      style="resize: none;"
                      placeholder="Leave your message here."
                    ></textarea>
                  </div>

                  <div class="input-group newsletter-form send_form">
                    <span class="input-group-btn">
                      <button 
                        type="submit"
                        class="btn caps">
						Send
                      </button>
                    </span>
                  </div>
                  <p class="sending_form" style="margin: 10px 0; display: none">Sending...</p>
                  <a
                    href="//shop.canturi.com/policies/privacy-policy"
                    target="_blank"
                    style="font-size: 0.7rem;"
                    >Privacy Policy</a
                  >
                </form>
              </div>
              <div class="form-response">
                <h2>
                  We have received your request and will respond to you shortly.
                </h2>
                <p>
                  In the meantime, should you wish to speak to a fine jewellery
                  expert please contact within Australia: 1300 883 883 or from
                  overseas: (+61 2) 9246 2888.
                </p>
              </div>
            </div>
          </div>
        </div>
          <a href="#" class="close">{% include 'icon-close-thin' %}</a>
      </div>
    </div>
  </section>
</div>